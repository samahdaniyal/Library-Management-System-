<p>
    <a asp-action="Add" class="btn btn-primary">Add Author</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Books</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Name</td>
            <td>@author.BooksToString()</td>
            <td>
                <a asp-action="Update" asp-route-id="@author.Id" class="btn btn-secondary">Update</a>
                <form asp-action="Delete" asp-route-id="@author.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

